{
	"name": "pipeline_parametrizado",
	"properties": {
		"activities": [
			{
				"name": "carga-datos-csv",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"wildcardFileName": "*.csv",
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "ParquetSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "ParquetWriteSettings"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "datosMS",
						"type": "DatasetReference",
						"parameters": {
							"zona": {
								"value": "@pipeline().parameters.zona",
								"type": "Expression"
							},
							"carpeta1": {
								"value": "@pipeline().parameters.carpeta1",
								"type": "Expression"
							},
							"nombre_archivo": {
								"value": "@pipeline().parameters.nombre_archivo",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "Parquet1",
						"type": "DatasetReference"
					}
				]
			}
		],
		"parameters": {
			"zona": {
				"type": "string",
				"defaultValue": "datosclase"
			},
			"carpeta1": {
				"type": "string",
				"defaultValue": "datos22"
			},
			"nombre_archivo": {
				"type": "string",
				"defaultValue": "mass-shootings-database-2002"
			},
			"carpeta2": {
				"type": "string",
				"defaultValue": "archivos_parquet"
			},
			"cuenta_almacenamiento": {
				"type": "string",
				"defaultValue": "clasedfactory"
			}
		},
		"annotations": []
	}
}